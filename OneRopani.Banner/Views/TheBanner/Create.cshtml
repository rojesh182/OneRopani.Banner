@model OneRopani.Banner.Models.TheBanner

@{
    ViewBag.Title = "Create";
}

<h2>Add Data of Banner</h2>

@using (Html.BeginForm("Create", "TheBanner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Path)
        <input type="file" name="postedFile" />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BannerUrl)
        @Html.TextBoxFor(m => m.BannerUrl, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })    
    </div>

    <button type="submit" class="btn btn-primary">Save & Upload</button>
}